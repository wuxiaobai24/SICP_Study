(define (max_sum a b c)
	(cond ((and (> b a)
		    (> c a))
	       (+ b c))
	      ((and (> a b)
		    (> c b))
	       (+ a c))
	      (else (+ a b))))

(max_sum 1 2 3)

(define (min a b c)
	(cond ((and (> b a)
		   (> c a))
		a)
	      ((and (> a b)
		   (> c b))
		b)
	      (else c)))
(define (max_sum a b c)
	(cond ((= (min a b c) a) (+ b c))
	      ((= (min a b c) b) (+ a c))
	      (else (+ a b))))
(max_sum 1 2 3)

